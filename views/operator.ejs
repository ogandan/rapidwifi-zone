<!DOCTYPE html>
<html>
<head>
  <title>Operator Dashboard - RAPIDWIFI-ZONE</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header>
    <h1>Operator Dashboard</h1>
    <nav>
      <a href="/logout">Logout</a>
    </nav>
  </header>

  <main>
    <section>
      <h2>Available Vouchers</h2>
      <table>
        <thead>
          <tr>
            <th>Username</th>
            <th>Profile</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Sell</th>
          </tr>
        </thead>
        <tbody>
          <% vouchers.forEach(function(voucher) { %>
            <tr>
              <td><%= voucher.username %></td>
              <td><%= voucher.profile %></td>
              <td><%= voucher.status %></td>
              <td><%= voucher.created_at %></td>
              <td>
                <% if (voucher.status === 'active') { %>
                  <form action="/pay/cash" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type="hidden" name="user" value="<%= voucher.username %>">
                    <input type="hidden" name="profile" value="<%= voucher.profile %>">
                    <label>Amount:</label>
                    <input type="number" name="amount" required>
                    <button type="submit">Sell (Cash)</button>
                  </form>
                  <form action="/deliver-voucher/<%= voucher.username %>" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <label>Channel:</label>
                    <select name="channel" required>
                      <option value="SMS">SMS</option>
                      <option value="WhatsApp">WhatsApp</option>
                      <option value="Telegram">Telegram</option>
                    </select>
                    <label>Recipient:</label>
                    <input type="text" name="recipient" placeholder="Phone or Chat ID" required>
                    <button type="submit">Deliver</button>
                  </form>
                <% } else { %>
                  <span>Not available</span>
                <% } %>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </section>
  </main>

  <footer>
    <p>&copy; 2026 RAPIDWIFI-ZONE</p>
  </footer>
</body>
</html>

