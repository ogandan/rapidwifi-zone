<h2>Admin Login</h2>

<% if (error) { %>
  <p style="color:red;"><%= error %></p>
<% } %>

<form action="/authv2/login" method="POST">
  <div>
    <label>Email:</label>
    <input type="text" name="email" required>
  </div>
  <div>
    <label>Password:</label>
    <input type="password" name="password" required>
  </div>
  <button type="submit">Login</button>
</form>

