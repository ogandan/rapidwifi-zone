<form action="/login" method="POST" class="login-form">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">

  <div class="form-group">
    <label for="username">Voucher Name</label>
    <input type="text" id="username" name="username" placeholder="Enter voucher name" required>
  </div>

  <div class="form-group">
    <label for="password">Voucher Code</label>
    <input type="password" id="password" name="password" placeholder="Enter voucher code" required>
  </div>

  <button type="submit">Login</button>
</form>

