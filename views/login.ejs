<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Voucher Access - RAPIDWIFI-ZONE</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-light d-flex align-items-center justify-content-center vh-100">
  <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
    <h2 class="mb-3 text-center text-primary">Voucher Access</h2>

    <!-- Existing Voucher Login -->
    <form action="/login" method="POST" class="mb-4">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div class="mb-3">
        <label for="username" class="form-label">Voucher Username</label>
        <input type="text" id="username" name="username"
               class="form-control" placeholder="Enter voucher username" required>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Voucher Password</label>
        <input type="password" id="password" name="password"
               class="form-control" placeholder="Enter voucher password" required>
      </div>
      <button type="submit" class="btn btn-success w-100">Login</button>
    </form>

    <!-- New Self-Service Payment -->
    <h5 class="text-center text-secondary">Or Buy a Voucher</h5>
    <form action="/selfservice/pay" method="POST">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">

      <div class="mb-3">
        <label for="phone" class="form-label">Your Mobile Number</label>
        <input type="tel" id="phone" name="phone"
               class="form-control" placeholder="229XXXXXXXX" required>
      </div>

      <div class="mb-3">
        <label for="profile" class="form-label">Select Profile</label>
        <select id="profile" name="profile" class="form-select" required>
          <option value="">Choose...</option>
          <% if (profiles) { %>
            <% Object.keys(profiles).forEach(function(p) { %>
              <option value="<%= p %>">
                <%= p %> (Price: <%= profiles[p].price %> FCFA)
              </option>
            <% }) %>
          <% } else { %>
            <option disabled>No profiles available</option>
          <% } %>
        </select>
      </div>

      <button type="submit" class="btn btn-primary w-100">Pay with Mobile Money</button>
    </form>

    <!-- Alerts for payment result -->
    <% if (paymentResult) { %>
      <% if (paymentResult.success) { %>
        <div class="alert alert-success mt-3">
          Payment successful! Voucher:
          <strong><%= paymentResult.voucher.username %></strong> /
          <strong><%= paymentResult.voucher.password %></strong>
          (<%= paymentResult.voucher.profile %>, <%= paymentResult.voucher.price %> FCFA)
        </div>
      <% } else { %>
        <div class="alert alert-danger mt-3">
          Payment failed: <%= paymentResult.message %>
        </div>
      <% } %>
    <% } %>
  </div>
</body>
</html>

