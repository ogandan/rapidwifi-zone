<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= __("admin_dashboard") %></title>
  <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
  <h1><%= __("admin_dashboard") %></h1>

  <!-- Show current Quick Tunnel URL -->
  <p>Current Tunnel URL: <span id="tunnel-url"><%= tunnelURL %></span></p>

  <h2><%= __("active_vouchers") %></h2>
  <table>
    <tr><th>Username</th><th>Profile</th><th>Status</th><th>Actions</th></tr>
    <% vouchers.forEach(function(voucher){ %>
      <tr>
        <td><%= voucher.username %></td>
        <td><%= voucher.profile %></td>
        <td><%= voucher.status %></td>
        <td>
          <form action="/admin/voucher/block" method="POST">
            <input type="hidden" name="username" value="<%= voucher.username %>">
            <button type="submit">Block</button>
          </form>
          <form action="/admin/voucher/delete" method="POST">
            <input type="hidden" name="username" value="<%= voucher.username %>">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% }); %>
  </table>

  <h2><%= __("system_health") %></h2>
  <p>Uptime: <%= systemHealth.uptime %> seconds</p>
  <p>Load Average: <%= systemHealth.load %></p>
  <p>Memory Free: <%= systemHealth.memory.free %> / <%= systemHealth.memory.total %></p>
</body>
</html>

