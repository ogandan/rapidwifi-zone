<!DOCTYPE html>
<html>
<head>
  <title>Download Logs</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
  <div class="container py-4">
    <h2 class="mb-4">Download Logs</h2>

    <!-- Export Buttons -->
    <div class="mb-3">
      <a href="/admin/export-logs?<%= new URLSearchParams(query).toString() %>" class="btn btn-success">
        Export Filtered Logs (CSV)
      </a>
      <a href="/admin/export-logs-json?<%= new URLSearchParams(query).toString() %>" class="btn btn-secondary ms-2">
        Export Filtered Logs (JSON)
      </a>
    </div>

    <!-- Filter Form -->
    <form method="GET" action="/admin/logs" class="row g-3 mb-4">
      <div class="col-auto">
        <input type="text" name="action" value="<%= query.action || '' %>" class="form-control" placeholder="Filter by Action">
      </div>
      <div class="col-auto">
        <input type="text" name="user" value="<%= query.user || '' %>" class="form-control" placeholder="Filter by User">
      </div>
      <div class="col-auto">
        <input type="text" name="filename" value="<%= query.filename || '' %>" class="form-control" placeholder="Filter by Filename">
      </div>
      <div class="col-auto">
        <label class="form-label">Start Date</label>
        <input type="date" name="startDate" value="<%= query.startDate || '' %>" class="form-control">
      </div>
      <div class="col-auto">
        <label class="form-label">End Date</label>
        <input type="date" name="endDate" value="<%= query.endDate || '' %>" class="form-control">
      </div>
      <div class="col-auto align-self-end">
        <button type="submit" class="btn btn-primary">Apply Filters</button>
      </div>
    </form>

    <!-- Logs Table -->
    <table class="table table-hover table-bordered align-middle">
      <thead class="table-dark">
        <tr>
          <th>
            <a href="?<%= new URLSearchParams({ ...query, sort: 'action', order: query.order === 'asc' ? 'desc' : 'asc' }).toString() %>" class="text-white text-decoration-none">
              Action
            </a>
          </th>
          <th>
            <a href="?<%= new URLSearchParams({ ...query, sort: 'filename', order: query.order === 'asc' ? 'desc' : 'asc' }).toString() %>" class="text-white text-decoration-none">
              Filename
            </a>
          </th>
          <th>
            <a href="?<%= new URLSearchParams({ ...query, sort: 'user', order: query.order === 'asc' ? 'desc' : 'asc' }).toString() %>" class="text-white text-decoration-none">
              User
            </a>
          </th>
          <th>
            <a href="?<%= new URLSearchParams({ ...query, sort: 'timestamp', order: query.order === 'asc' ? 'desc' : 'asc' }).toString() %>" class="text-white text-decoration-none">
              Timestamp
            </a>
          </th>
        </tr>
      </thead>
      <tbody>
        <% logs.forEach(l => { %>
          <tr>
            <td><%= l.action %></td>
            <td><%= l.filename %></td>
            <td><%= l.user %></td>
            <td><%= new Date(l.timestamp).toLocaleString() %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <!-- Pagination -->
    <nav>
      <ul class="pagination">
        <% if (currentPage > 1) { %>
          <li class="page-item">
            <a class="page-link" href="?<%= new URLSearchParams({ ...query, page: currentPage - 1 }).toString() %>">Previous</a>
          </li>
        <% } %>
        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= i === currentPage ? 'active' : '' %>">
            <a class="page-link" href="?<%= new URLSearchParams({ ...query, page: i }).toString() %>"><%= i %></a>
          </li>
        <% } %>
        <% if (currentPage < totalPages) { %>
          <li class="page-item">
            <a class="page-link" href="?<%= new URLSearchParams({ ...query, page: currentPage + 1 }).toString() %>">Next</a>
          </li>
        <% } %>
      </ul>
    </nav>
  </div>
</body>
</html>

