<!DOCTYPE html>
<html>
<head>
  <title>Download Logs</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
  <div class="container py-4">
    <h2 class="mb-4">Download Logs</h2>

    <!-- Export Logs Button -->
    <div class="mb-3">
      <a href="/admin/export-logs" class="btn btn-success">Export Logs as CSV</a>
    </div>

    <!-- Filter Form -->
    <form method="GET" action="/admin/logs" class="row g-3 mb-4">
      <div class="col-auto">
        <input type="text" name="action" class="form-control" placeholder="Filter by Action">
      </div>
      <div class="col-auto">
        <input type="text" name="user" class="form-control" placeholder="Filter by User">
      </div>
      <div class="col-auto">
        <button type="submit" class="btn btn-primary">Apply Filters</button>
      </div>
    </form>

    <!-- Logs Table -->
    <table class="table table-hover table-bordered align-middle">
      <thead class="table-dark">
        <tr>
          <th>Action</th>
          <th>Filename</th>
          <th>User</th>
          <th>Timestamp</th>
        </tr>
      </thead>
      <tbody>
        <% logs.forEach(l => { %>
          <tr>
            <td>
              <span class="badge bg-info text-dark"><%= l.action %></span>
            </td>
            <td><%= l.filename %></td>
            <td>
              <span class="badge bg-secondary"><%= l.user %></span>
            </td>
            <td><%= new Date(l.timestamp).toLocaleString() %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>

