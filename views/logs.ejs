<!-- ===== logs.ejs Part 1 ===== -->
<!DOCTYPE html>
<html>
<head>
  <title>Download Logs</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
  <div class="container py-4">
    <h2 class="mb-4">Download Logs</h2>

    <!-- Filtering Form (Admins only) -->
    <% if (session.role === 'admin') { %>
    <form method="GET" action="/admin/logs" class="row g-3 mb-4">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div class="col-md-3">
        <input type="text" name="action" class="form-control" placeholder="Filter by action" value="<%= query.action || '' %>">
      </div>
      <div class="col-md-3">
        <input type="text" name="user" class="form-control" placeholder="Filter by user" value="<%= query.user || '' %>">
      </div>
      <div class="col-md-3">
        <input type="text" name="filename" class="form-control" placeholder="Filter by filename" value="<%= query.filename || '' %>">
      </div>
      <div class="col-md-3">
        <button type="submit" class="btn btn-primary w-100">Apply Filters</button>
      </div>
    </form>
    <% } %>
<!-- ===== logs.ejs Part 2 ===== -->

    <!-- Logs Table -->
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Action</th>
          <th>Filename</th>
          <th>User</th>
          <th>Profile</th>
          <th>Timestamp</th>
        </tr>
      </thead>
      <tbody>
        <% logs.forEach(l => { %>
        <tr>
          <td><%= l.action %></td>
          <td><%= l.filename %></td>
          <td><%= l.user %></td>
          <td><%= l.profile %></td>
          <td><%= l.timestamp %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>

    <!-- Pagination -->
    <nav>
      <ul class="pagination">
        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= i === currentPage ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>"><%= i %></a>
          </li>
        <% } %>
      </ul>
    </nav>
<!-- ===== logs.ejs Part 3 ===== -->

    <!-- Export Buttons (Admins only) -->
    <% if (session.role === 'admin') { %>
    <div class="mb-4">
      <form action="/admin/export-logs" method="GET" style="display:inline;">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button type="submit" class="btn btn-success">Export Logs (CSV)</button>
      </form>
      <form action="/admin/export-logs-json" method="GET" style="display:inline;">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button type="submit" class="btn btn-info">Export Logs (JSON)</button>
      </form>
    </div>
    <% } %>

  </div> <!-- container -->
</body>
</html>

