<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Export Logs - RAPIDWIFI-ZONE</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="container mt-5">
  <h1 class="mb-4 text-primary">Export Logs</h1>

  <% if (logs && logs.length > 0) { %>
    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Profile</th>
          <th>Filename</th>
          <th>Exported By</th>
          <th>Timestamp</th>
        </tr>
      </thead>
      <tbody>
        <% logs.forEach(log => { %>
          <tr>
            <td><%= log.id %></td>
            <td><%= log.profile %></td>
            <td><%= log.filename %></td>
            <td><%= log.exported_by %></td>
            <td><%= log.timestamp %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <div class="alert alert-info">
      No export logs found.
    </div>
  <% } %>

  <div class="mt-3">
    <a href="/admin/export-logs-csv" class="btn btn-success">Download CSV</a>
    <a href="/admin/export-logs-json" class="btn btn-secondary">Download JSON</a>
    <a href="/admin" class="btn btn-primary">Back to Admin Dashboard</a>
  </div>
</body>
</html>

