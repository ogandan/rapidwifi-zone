<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="bg-light">
  <div class="container py-4">
    <h2 class="mb-4">Admin Dashboard</h2>

    <!-- Create Voucher -->
    <div class="mb-4">
      <form action="/admin/create" method="POST" class="row g-3">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="col-auto">
          <select name="profile" class="form-select" required>
            <option value="">Select Profile</option>
            <% if (profiles) { %>
              <% Object.keys(profiles).forEach(function(p) { %>
                <option value="<%= p %>">
                  <%= p %> (Price: <%= profiles[p].price %> FCFA)
                </option>
              <% }) %>
            <% } else { %>
              <option disabled>No profiles available</option>
            <% } %>
          </select>
        </div>
        <div class="col-auto">
          <input type="text" name="batchTag" class="form-control" placeholder="Batch Tag (optional)">
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-success">Create Voucher</button>
        </div>
      </form>
    </div>

    <!-- Toolbar -->
    <div class="btn-toolbar mb-4" role="toolbar">
      <div class="btn-group me-2">
        <button type="button" class="btn btn-info dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
          Export Options
        </button>
        <ul class="dropdown-menu">
          <li><a class="dropdown-item" href="/admin/export-all">Export All Vouchers (CSV)</a></li>
          <li><a class="dropdown-item" href="/admin/export-filtered-csv?<%= new URLSearchParams({batch: batch || '', status: status || '', profile: profile || ''}).toString() %>">Export Filtered Vouchers (CSV)</a></li>
          <li><a class="dropdown-item" href="/admin/export-filtered-json?<%= new URLSearchParams({batch: batch || '', status: status || '', profile: profile || ''}).toString() %>">Export Filtered Vouchers (JSON)</a></li>
        </ul>
      </div>
      <div class="btn-group me-2">
        <a href="/admin/logs" class="btn btn-outline-dark">View Logs</a>
      </div>
      <div class="btn-group me-2">
        <a href="/analytics" class="btn btn-outline-primary">View Analytics</a>
      </div>
      <div class="btn-group me-2">
        <!-- New Operator/Admin Management button -->
        <a href="/admin/operator-management" class="btn btn-outline-secondary">Operator/Admin Management</a>
      </div>
      <div class="btn-group">
        <a href="/logout" class="btn btn-outline-danger">Logout</a>
      </div>
    </div>

    <!-- Bulk Actions -->
    <div class="mb-3">
      <select id="bulkAction" class="form-select d-inline w-auto">
        <option value="">Bulk Action</option>
        <option value="activate">Activate</option>
        <option value="block">Block</option>
        <option value="delete">Delete</option>
      </select>
      <button id="applyBulkAction" class="btn btn-primary">Apply</button>
    </div>

    <!-- Voucher Table -->
    <div class="table-responsive mb-4">
      <table id="voucherTable" class="table table-striped table-bordered"></table>
    </div>

    <!-- Payments Table -->
    <div class="table-responsive">
      <table id="paymentsTable" class="table table-striped table-bordered"></table>
    </div>
  </div>

  <script>
    $(document).ready(function() {
      // âœ… Voucher DataTable with checkbox column
      const voucherTable = $('#voucherTable').DataTable({
        ajax: '/api/vouchers',
        columns: [
          { data: 'id', title: 'Select',
            render: function(data) {
              return `<input type="checkbox" class="voucher-select" value="${data}">`;
            }
          },
          { data: 'id', title: 'ID' },
          { data: 'username', title: 'Username' },
          { data: 'password', title: 'Password' },
          { data: 'profile', title: 'Profile' },
          { data: 'status', title: 'Status' },
          { data: 'created_by', title: 'Created By' },
          { data: 'created_at', title: 'Created At' }
        ],
        order: [[7, 'desc']],
        pageLength: 25,
        dom: 'Bfrtip',
        buttons: ['csv', 'excel']
      });

      // Payments DataTable
      const paymentsTable = $('#paymentsTable').DataTable({
        ajax: '/api/payments',
        columns: [
          { data: 'id', title: 'Payment ID' },
          { data: 'voucher_id', title: 'Voucher ID' },
          { data: 'method', title: 'Method' },
          { data: 'amount', title: 'Amount' },
          { data: 'status', title: 'Status' },
          { data: 'timestamp', title: 'Timestamp' }
        ],
        order: [[5, 'desc']],
        pageLength: 25,
        dom: 'Bfrtip',
        buttons: ['csv', 'excel']
      });

      // Auto-refresh
      setInterval(() => {
        voucherTable.ajax.reload(null, false);
        paymentsTable.ajax.reload(null, false);
      }, 30000);

      // Bulk action handler
      $('#applyBulkAction').click(function() {
        const action = $('#bulkAction').val();
        const ids = $('.voucher-select:checked').map(function() { return this.value; }).get();
        if (!action || ids.length === 0) {
          alert('Please select an action and at least one voucher.');
          return;
        }
        $.post(`/admin/vouchers/bulk-${action}`, { ids, _csrf: '<%= csrfToken %>' })
          .done(() => voucherTable.ajax.reload(null, false))
          .fail(() => alert('Bulk action failed.'));
      });
    });
  </script>
</body>
</html>

