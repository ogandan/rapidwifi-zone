<!-- ===== admin.ejs Part 1 ===== -->
<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="bg-light">
  <div class="container py-4">
    <h2 class="mb-4">Admin Dashboard</h2>

    <!-- Create Voucher -->
    <div class="mb-4">
      <form action="/admin/create" method="POST" class="row g-3">
        <div class="col-auto">
          <select name="profile" class="form-select" required>
            <option value="">Select Profile</option>
            <option value="basic">Basic</option>
            <option value="premium">Premium</option>
          </select>
        </div>
        <div class="col-auto">
          <input type="text" name="batchTag" class="form-control" placeholder="Batch Tag (optional)">
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-success">Create Voucher</button>
        </div>
      </form>
    </div>

    <!-- Toolbar with Dropdown Menu -->
    <div class="btn-toolbar mb-4" role="toolbar">
      <div class="btn-group me-2">
        <button type="button" class="btn btn-info dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
          Export Options
        </button>
        <ul class="dropdown-menu">
          <li><a class="dropdown-item" href="/admin/export">Export All Vouchers</a></li>
          <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#exportDateModal">Export by Date</a></li>
          <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#exportProfileModal">Export by Profile</a></li>
          <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#exportBatchModal">Export by Batch</a></li>
        </ul>
      </div>
      <div class="btn-group me-2">
        <a href="/admin/logs" class="btn btn-outline-dark">View Logs</a>
      </div>
      <div class="btn-group">
        <a href="/analytics" class="btn btn-outline-primary">View Analytics</a>
      </div>
    </div>
<!-- ===== admin.ejs Part 2 ===== -->

    <!-- Bulk Action Form -->
    <form action="/admin/bulk-action" method="POST">
      <div class="row g-3 mb-3">
        <div class="col-auto">
          <select name="action" class="form-select" required>
            <option value="">Choose Action</option>
            <option value="block">Block Selected</option>
            <option value="delete">Delete Selected</option>
          </select>
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-outline-primary">Apply</button>
        </div>
      </div>

      <!-- Voucher Table -->
      <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle">
          <thead class="table-dark">
            <tr>
              <th><input type="checkbox" id="selectAll" onclick="toggleAll(this)"></th>
              <th>ID</th>
              <th>Username</th>
              <th>Password</th>
              <th>Profile</th>
              <th>Status</th>
              <th>Batch Tag</th>
            </tr>
          </thead>
          <tbody>
            <% vouchers.forEach(v => { %>
              <tr>
                <td><input type="checkbox" name="voucherIds" value="<%= v.id %>"></td>
                <td><%= v.id %></td>
                <td><%= v.username %></td>
                <td><%= v.password %></td>
                <td><%= v.profile %></td>
                <td><%= v.status %></td>
                <td><%= v.batch_tag %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </form>
  </div>

  <!-- Modals for Export -->
  <div class="modal fade" id="exportDateModal" tabindex="-1">
    <div class="modal-dialog">
      <form action="/admin/export-range" method="GET" class="modal-content">
        <div class="modal-header"><h5 class="modal-title">Export by Date</h5></div>
        <div class="modal-body">
          <input type="date" name="startDate" class="form-control mb-2" required>
          <input type="date" name="endDate" class="form-control" required>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Export</button>
        </div>
      </form>
    </div>
  </div>

  <div class="modal fade" id="exportProfileModal" tabindex="-1">
    <div class="modal-dialog">
      <form action="/admin/export-profile" method="GET" class="modal-content">
        <div class="modal-header"><h5 class="modal-title">Export by Profile</h5></div>
        <div class="modal-body">
          <select name="profile" class="form-select" required>
            <option value="basic">Basic</option>
            <option value="premium">Premium</option>
          </select>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-warning">Export</button>
        </div>
      </form>
    </div>
  </div>

  <div class="modal fade" id="exportBatchModal" tabindex="-1">
    <div class="modal-dialog">
      <form action="/admin/export-batch" method="GET" class="modal-content">
        <div class="modal-header"><h5 class="modal-title">Export by Batch</h5></div>
        <div class="modal-body">
          <input type="text" name="batchTag" class="form-control" placeholder="Batch Tag" required>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-danger">Export</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    function toggleAll(source) {
      const checkboxes = document.querySelectorAll('input[name="voucherIds"]');
      checkboxes.forEach(cb => cb.checked = source.checked);
    }
  </script>
</body>
</html>

