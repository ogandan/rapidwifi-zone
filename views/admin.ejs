<!-- ===== admin.ejs Part 1 ===== -->
<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
  <div class="container py-4">
    <h2 class="mb-4">Admin Dashboard</h2>

    <!-- Show tunnel URL -->
    <div class="alert alert-info">
      Tunnel URL: <strong><%= tunnelUrl %></strong>
    </div>

    <!-- Voucher Creation Form (Admins only) -->
    <% if (session.role === 'admin') { %>
    <form action="/admin/create" method="POST" class="mb-4">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div class="row">
        <div class="col-md-4">
          <input type="text" name="profile" class="form-control" placeholder="Profile" required>
        </div>
        <div class="col-md-4">
          <input type="text" name="batchTag" class="form-control" placeholder="Batch Tag (optional)">
        </div>
        <div class="col-md-4">
          <button type="submit" class="btn btn-primary w-100">Create Voucher</button>
        </div>
      </div>
    </form>
    <% } %>
<!-- ===== admin.ejs Part 2 ===== -->

    <!-- Voucher List -->
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Username</th>
          <th>Password</th>
          <th>Profile</th>
          <th>Status</th>
          <th>Created At</th>
          <th>Batch Tag</th>
          <% if (session.role === 'admin') { %><th>Actions</th><% } %>
        </tr>
      </thead>
      <tbody>
        <% vouchers.forEach(v => { %>
        <tr>
          <td><%= v.id %></td>
          <td><%= v.username %></td>
          <td><%= v.password %></td>
          <td><%= v.profile %></td>
          <td><%= v.status %></td>
          <td><%= v.created_at %></td>
          <td><%= v.batch_tag %></td>
          <% if (session.role === 'admin') { %>
          <td>
            <form action="/admin/block/<%= v.id %>" method="POST" style="display:inline;">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button type="submit" class="btn btn-warning btn-sm">Block</button>
            </form>
            <form action="/admin/delete/<%= v.id %>" method="POST" style="display:inline;">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </td>
          <% } %>
        </tr>
        <% }); %>
      </tbody>
    </table>
<!-- ===== admin.ejs Part 3 ===== -->

    <!-- Export Buttons (Admins only) -->
    <% if (session.role === 'admin') { %>
    <div class="mb-4">
      <form action="/admin/export" method="GET" style="display:inline;">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button type="submit" class="btn btn-success">Export All Vouchers</button>
      </form>
      <form action="/admin/export-logs" method="GET" style="display:inline;">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button type="submit" class="btn btn-info">Export Logs</button>
      </form>
    </div>
    <% } %>

  </div> <!-- container -->
</body>
</html>

