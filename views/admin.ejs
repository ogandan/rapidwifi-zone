<!-- ===== admin.ejs Part 1 ===== -->
<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
  <div class="container py-4">
    <h2 class="mb-4">Admin Dashboard</h2>

    <!-- Voucher Creation Form -->
    <form action="/admin/create" method="POST" class="row g-3 mb-4">
      <div class="col-auto">
        <select name="profile" class="form-select" required>
          <option value="">Select Profile</option>
          <option value="basic">Basic</option>
          <option value="premium">Premium</option>
        </select>
      </div>
      <div class="col-auto">
        <input type="text" name="batchTag" class="form-control" placeholder="Batch Tag (optional)">
      </div>
      <div class="col-auto">
        <button type="submit" class="btn btn-success">Create Voucher</button>
      </div>
    </form>

    <!-- Export Buttons -->
    <div class="mb-4">
      <a href="/admin/export" class="btn btn-info">Export All Vouchers (CSV)</a>
      <a href="/admin/logs" class="btn btn-outline-dark ms-2">View Logs</a>
    </div>

    <!-- Date Range Export Form -->
    <form action="/admin/export-range" method="GET" class="row g-3 mb-4">
      <div class="col-auto">
        <label class="form-label">Start Date</label>
        <input type="date" name="startDate" class="form-control" required>
      </div>
      <div class="col-auto">
        <label class="form-label">End Date</label>
        <input type="date" name="endDate" class="form-control" required>
      </div>
      <div class="col-auto align-self-end">
        <button type="submit" class="btn btn-primary">Export by Date Range</button>
      </div>
    </form>
<!-- ===== admin.ejs Part 2 ===== -->

    <!-- Profile Export Form -->
    <form action="/admin/export-profile" method="GET" class="row g-3 mb-4">
      <div class="col-auto">
        <select name="profile" class="form-select" required>
          <option value="">Select Profile</option>
          <option value="basic">Basic</option>
          <option value="premium">Premium</option>
        </select>
      </div>
      <div class="col-auto align-self-end">
        <button type="submit" class="btn btn-warning">Export by Profile</button>
      </div>
    </form>

    <!-- Batch Export Form -->
    <form action="/admin/export-batch" method="GET" class="row g-3 mb-4">
      <div class="col-auto">
        <input type="text" name="batchTag" class="form-control" placeholder="Batch Tag" required>
      </div>
      <div class="col-auto align-self-end">
        <button type="submit" class="btn btn-danger">Export by Batch</button>
      </div>
    </form>

    <!-- Voucher Table -->
    <table class="table table-hover table-bordered align-middle">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Username</th>
          <th>Password</th>
          <th>Profile</th>
          <th>Status</th>
          <th>Batch Tag</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% vouchers.forEach(v => { %>
          <tr>
            <td><%= v.id %></td>
            <td><%= v.username %></td>
            <td><%= v.password %></td>
            <td><%= v.profile %></td>
            <td><%= v.status %></td>
            <td><%= v.batch_tag %></td>
            <td>
              <form action="/admin/block/<%= v.id %>" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-sm btn-secondary">Block</button>
              </form>
              <form action="/admin/delete/<%= v.id %>" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>

