<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
  <div class="container py-4">
    <h2 class="mb-4">Admin Dashboard</h2>

    <!-- Voucher Creation Form -->
    <form action="/admin/create" method="POST" class="row g-3 mb-4">
      <div class="col-auto">
        <select name="profile" class="form-select" required>
          <option value="">Select Profile</option>
          <option value="basic">Basic</option>
          <option value="premium">Premium</option>
        </select>
      </div>
      <div class="col-auto">
        <input type="text" name="batchTag" class="form-control" placeholder="Batch Tag (optional)">
      </div>
      <div class="col-auto">
        <button type="submit" class="btn btn-success">Create Voucher</button>
      </div>
    </form>

    <!-- Export Buttons -->
    <div class="mb-4">
      <a href="/admin/export" class="btn btn-info">Export All Vouchers (CSV)</a>
    </div>

    <!-- Date Range Export Form -->
    <form action="/admin/export-range" method="POST" class="row g-3 mb-4">
      <div class="col-auto">
        <label for="startDate" class="form-label">Start Date</label>
        <input type="date" id="startDate" name="startDate" class="form-control" required>
      </div>
      <div class="col-auto">
        <label for="endDate" class="form-label">End Date</label>
        <input type="date" id="endDate" name="endDate" class="form-control" required>
      </div>
      <div class="col-auto align-self-end">
        <button type="submit" class="btn btn-primary">Export by Date Range</button>
      </div>
    </form>

    <!-- Profile Export Form -->
    <form action="/admin/export-profile" method="POST" class="row g-3 mb-4">
      <div class="col-auto">
        <label for="profile" class="form-label">Profile</label>
        <select id="profile" name="profile" class="form-select" required>
          <option value="">Select Profile</option>
          <option value="basic">Basic</option>
          <option value="premium">Premium</option>
        </select>
      </div>
      <div class="col-auto align-self-end">
        <button type="submit" class="btn btn-secondary">Export by Profile</button>
      </div>
    </form>

    <!-- Batch Export Form -->
    <form action="/admin/export-batch" method="POST" class="row g-3 mb-4">
      <div class="col-auto">
        <label for="batchTag" class="form-label">Batch Tag</label>
        <input type="text" id="batchTag" name="batchTag" class="form-control" required>
      </div>
      <div class="col-auto align-self-end">
        <button type="submit" class="btn btn-dark">Export by Batch</button>
      </div>
    </form>

    <!-- Voucher Table -->
    <table class="table table-bordered table-striped">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Username</th>
          <th>Password</th>
          <th>Profile</th>
          <th>Status</th>
          <th>Created At</th>
          <th>Batch Tag</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% vouchers.forEach(v => { %>
          <tr>
            <td><%= v.id %></td>
            <td><%= v.username %></td>
            <td><%= v.password %></td>
            <td><%= v.profile %></td>
            <td><%= v.status %></td>
            <td><%= v.created_at %></td>
            <td><%= v.batch_tag %></td>
            <td>
              <form action="/admin/block/<%= v.id %>" method="POST" class="d-inline">
                <button type="submit" class="btn btn-warning btn-sm">Block</button>
              </form>
              <form action="/admin/delete/<%= v.id %>" method="POST" class="d-inline ms-1">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <!-- Tunnel URL -->
    <div class="mt-4">
      <strong>Tunnel URL:</strong> <%= tunnelUrl %>
    </div>
  </div>
</body>
</html>

