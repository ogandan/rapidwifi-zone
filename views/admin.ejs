<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>RAPIDWIFI-ZONE Admin Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      padding-top: 60px;
    }
    .status-active {
      color: #198754;
      font-weight: bold;
    }
    .status-blocked {
      color: #dc3545;
      font-weight: bold;
    }
    .status-disabled {
      color: #6c757d;
      font-weight: bold;
    }
    .card {
      margin-bottom: 30px;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
      <span class="navbar-brand mb-0 h1">RAPIDWIFI-ZONE Admin</span>
    </div>
  </nav>

  <div class="container">
    <!-- Tunnel URL -->
    <div class="card">
      <div class="card-header bg-primary text-white">
        Current Tunnel URL
      </div>
      <div class="card-body">
        <pre class="mb-0"><%= tunnelUrl %></pre>
      </div>
    </div>

    <!-- Voucher Creation -->
    <div class="card">
      <div class="card-header bg-success text-white">
        Create Voucher
      </div>
      <div class="card-body">
        <form method="POST" action="/admin/vouchers/create">
          <div class="mb-3">
            <label for="profile" class="form-label">Profile</label>
            <select name="profile" id="profile" class="form-select" required>
              <option value="default">Default</option>
              <option value="1h-100FCFA">1h - 100 FCFA</option>
              <option value="3h-200FCFA">3h - 200 FCFA</option>
              <option value="8h-500FCFA">8h - 500 FCFA</option>
              <option value="24h-1000FCFA">24h - 1000 FCFA</option>
            </select>
          </div>
          <button type="submit" class="btn btn-primary">Create Voucher</button>
        </form>
      </div>
    </div>

    <!-- Voucher Table -->
    <div class="card">
      <div class="card-header bg-info text-white">
        Recent Vouchers
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
              <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Profile</th>
                <th>Created At</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% vouchers.forEach(v => { %>
                <tr>
                  <td><%= v.id %></td>
                  <td><%= v.username %></td>
                  <td><%= v.profile %></td>
                  <td><%= v.created_at %></td>
                  <td class="<%= 'status-' + v.status %>"><%= v.status %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

