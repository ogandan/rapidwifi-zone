<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>
</head>
<body class="bg-light">
  <div class="container py-4">
    <h2 class="mb-4">Admin Dashboard</h2>

    <!-- Create Voucher -->
    <div class="mb-4">
      <form action="/admin/create" method="POST" class="row g-3">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="col-auto">
          <select name="profile" class="form-select" required>
            <option value="">Select Profile</option>
            <option value="basic">Basic</option>
            <option value="premium">Premium</option>
          </select>
        </div>
        <div class="col-auto">
          <input type="text" name="batchTag" class="form-control" placeholder="Batch Tag (optional)">
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-success">Create Voucher</button>
        </div>
      </form>
    </div>

    <!-- Toolbar -->
    <div class="btn-toolbar mb-4" role="toolbar">
      <div class="btn-group me-2">
        <button type="button" class="btn btn-info dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
          Export Options
        </button>
        <ul class="dropdown-menu">
          <li><a class="dropdown-item" href="/admin/export-all">Export All Vouchers (CSV)</a></li>
          <li><a class="dropdown-item" href="/admin/export-logs-csv">Export Filtered Logs (CSV)</a></li>
          <li><a class="dropdown-item" href="/admin/export-logs-json">Export Filtered Logs (JSON)</a></li>
        </ul>
      </div>
      <div class="btn-group me-2">
        <a href="/admin/logs" class="btn btn-outline-dark">View Logs</a>
      </div>
      <div class="btn-group">
        <a href="/analytics" class="btn btn-outline-primary">View Analytics</a>
      </div>
    </div>

    <!-- Operator Management -->
    <div class="mb-4">
      <h4>Manage Operators</h4>
      <form action="/admin/create-operator" method="POST" class="row g-3 mb-3">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="col-auto">
          <input type="text" name="username" class="form-control" placeholder="Operator Username" required>
        </div>
        <div class="col-auto">
          <input type="password" name="password" class="form-control" placeholder="Operator Password" required>
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-secondary">Create Operator</button>
        </div>
      </form>

      <table class="table table-bordered">
        <thead class="table-light">
          <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Role</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (operators) { operators.forEach(op => { %>
            <tr>
              <td><%= op.id %></td>
              <td><%= op.username %></td>
              <td><%= op.role %></td>
              <td><%= op.status %></td>
              <td>
                <% if (op.status === 'inactive') { %>
                  <form action="/admin/activate-operator/<%= op.id %>" method="POST" style="display:inline;">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-success btn-sm">Activate</button>
                  </form>
                <% } else if (op.status === 'active') { %>
                  <form action="/admin/deactivate-operator/<%= op.id %>" method="POST" style="display:inline;">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-warning btn-sm">Deactivate</button>
                  </form>
                  <form action="/admin/delete-operator/<%= op.id %>" method="POST" style="display:inline;">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                  </form>
                <% } %>
              </td>
            </tr>
          <% }) } %>
        </tbody>
      </table>
    </div>

    <!-- Voucher Table -->
    <form action="/admin/bulk-action" method="POST">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div class="row g-3 mb-3">
        <div class="col-auto">
          <select name="action" class="form-select" required>
            <option value="">Choose Action</option>
            <option value="block">Block Selected</option>
            <option value="activate">Activate Selected</option>
            <option value="delete">Delete Selected</option>
          </select>
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-outline-primary">Apply</button>
        </div>
      </div>

      <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle">
          <thead class="table-dark">
            <tr>
              <th><input type="checkbox" id="selectAll" onclick="toggleAll(this)"></th>
              <th>ID</th>
              <th>Username</th>
              <th>Password</th>
              <th>Profile</th>
              <th>Status</th>
              <th>Batch Tag</th>
            </tr>
          </thead>
          <tbody>
            <% vouchers.forEach(v => { %>
              <tr>
                <td><input type="checkbox" name="voucherIds" value="<%= v.id %>"></td>
                <td><%= v.id %></td>
                <td><%= v.username %></td>
                <td><%= v.password %></td>
                <td><%= v.profile %></td>
                <td><%= v.status %></td>
                <td><%= v.batch_tag %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </form>
    <!-- Audit Logs Table -->
    <h4 class="mt-5">Audit Logs</h4>
    <div class="mb-3">
      <select id="actionFilter" class="form-select d-inline w-auto">
        <option value="">All Actions</option>
        <option value="voucher_created">Voucher Created</option>
        <option value="voucher_status_change">Voucher Status Change</option>
        <option value="payment_success">Payment Success</option>
        <option value="payment_failed">Payment Failed</option>
      </select>
      <select id="batchTagFilter" class="form-select d-inline w-auto">
        <option value="">All Batch Tags</option>
        <!-- You can dynamically populate batch tags here if needed -->
      </select>
    </div>
    <div class="table-responsive">
      <table id="auditLogsTable" class="table table-striped table-bordered"></table>
    </div>
  </div>

  <script>
    function toggleAll(source) {
      const checkboxes = document.querySelectorAll('input[name="voucherIds"]');
      checkboxes.forEach(cb => cb.checked = source.checked);
    }

    $(document).ready(function() {
      // Payments DataTable
      const paymentsTable = $('#paymentsTable').DataTable({
        ajax: '/api/payments',
        columns: [
          { data: 'id', title: 'Payment ID' },
          { data: 'voucher_id', title: 'Voucher ID' },
          { data: 'method', title: 'Method' },
          { data: 'amount', title: 'Amount' },
          { data: 'status', title: 'Status' },
          { data: 'created_at', title: 'Created At' }
        ],
        order: [[5, 'desc']],
        pageLength: 25,
        dom: 'Bfrtip',
        buttons: ['csv', 'excel']
      });

      // Filter dropdowns for Payments
      $('#statusFilter').on('change', function () {
        let val = $(this).val();
        paymentsTable.column(4).search(val ? '^' + val + '$' : '', true, false).draw();
      });
      $('#methodFilter').on('change', function () {
        let val = $(this).val();
        paymentsTable.column(2).search(val ? '^' + val + '$' : '', true, false).draw();
      });

      // Audit Logs DataTable
      const auditLogsTable = $('#auditLogsTable').DataTable({
        ajax: '/api/audit_logs',
        columns: [
          { data: 'id', title: 'Log ID' },
          { data: 'voucher_id', title: 'Voucher ID' },
          { data: 'action', title: 'Action' },
          { data: 'username', title: 'Batch Tag' },
          { data: 'profile', title: 'Profile' },
          { data: 'details', title: 'Details' },
          { data: 'channel', title: 'Channel' },
          { data: 'status', title: 'Status' },
          { data: 'created_at', title: 'Timestamp' }
        ],
        order: [[8, 'desc']],
        pageLength: 50,
        dom: 'Bfrtip',
        buttons: ['csv', 'excel']
      });

      // Filter dropdowns for Audit Logs
      $('#actionFilter').on('change', function () {
        let val = $(this).val();
        auditLogsTable.column(2).search(val ? '^' + val + '$' : '', true, false).draw();
      });
      $('#batchTagFilter').on('change', function () {
        let val = $(this).val();
        auditLogsTable.column(3).search(val ? val : '', true, false).draw();
      });
    });
  </script>
</body>
</html>

