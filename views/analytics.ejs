<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Analytics Dashboard - RAPIDWIFI-ZONE</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="container mt-5">
  <h1 class="mb-4 text-primary">Analytics Dashboard</h1>

  <div class="row">
    <div class="col-md-6">
      <canvas id="voucherStatusChart"></canvas>
    </div>
    <div class="col-md-6">
      <canvas id="profileChart"></canvas>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-12">
      <canvas id="exportChart"></canvas>
    </div>
  </div>

  <script>
    // Voucher Status Chart
    const ctxStatus = document.getElementById('voucherStatusChart').getContext('2d');
    new Chart(ctxStatus, {
      type: 'doughnut',
      data: {
        labels: ['Active', 'Inactive'],
        datasets: [{
          data: [<%= active %>, <%= inactive %>],
          backgroundColor: ['#0077cc', '#cccccc']
        }]
      },
      options: {
        responsive: true,
        plugins: {
          title: { display: true, text: 'Voucher Status' }
        }
      }
    });
    // Profile Distribution Chart
    const ctxProfile = document.getElementById('profileChart').getContext('2d');
    new Chart(ctxProfile, {
      type: 'bar',
      data: {
        labels: <%- JSON.stringify(profiles.map(p => p.profile)) %>,
        datasets: [{
          label: 'Vouchers per Profile',
          data: <%- JSON.stringify(profiles.map(p => p.count)) %>,
          backgroundColor: '#28a745'
        }]
      },
      options: {
        responsive: true,
        plugins: {
          title: { display: true, text: 'Profile Distribution' }
        }
      }
    });

    // Export Logs by Profile Chart
    const ctxExport = document.getElementById('exportChart').getContext('2d');
    new Chart(ctxExport, {
      type: 'bar',
      data: {
        labels: <%- JSON.stringify(exportsByProfile.map(e => e.profile)) %>,
        datasets: [{
          label: 'Exports per Profile',
          data: <%- JSON.stringify(exportsByProfile.map(e => e.count)) %>,
          backgroundColor: '#ffc107'
        }]
      },
      options: {
        responsive: true,
        plugins: {
          title: { display: true, text: 'Exports by Profile' }
        }
      }
    });
  </script>
</body>
</html>

