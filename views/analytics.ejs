<!DOCTYPE html>
<html>
<head>
  <title>Analytics Dashboard</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-light">
  <div class="container py-4">
    <h2 class="mb-4">Analytics Dashboard</h2>

    <div class="row mb-4">
      <div class="col-md-6">
        <canvas id="voucherStatusChart"></canvas>
      </div>
      <div class="col-md-6">
        <canvas id="paymentsTrendChart"></canvas>
      </div>
    </div>

    <div class="row mb-4">
      <div class="col-md-6">
        <canvas id="revenueTrendChart"></canvas>
      </div>
      <div class="col-md-6">
        <canvas id="profileRevenueChart"></canvas>
      </div>
    </div>
  </div>

  <script>
    // Voucher Status Chart
    new Chart(document.getElementById('voucherStatusChart'), {
      type: 'doughnut',
      data: {
        labels: ['Active', 'Inactive'],
        datasets: [{
          data: [<%= active %>, <%= inactive %>],
          backgroundColor: ['#0077cc', '#cccccc']
        }]
      },
      options: { plugins: { title: { display: true, text: 'Voucher Status' } } }
    });

    // Payments Trend Chart
    new Chart(document.getElementById('paymentsTrendChart'), {
      type: 'bar',
      data: {
        labels: <%- JSON.stringify(paymentsTrend.map(p => p.date)) %>,
        datasets: [{
          label: 'Payments Count',
          data: <%- JSON.stringify(paymentsTrend.map(p => p.count)) %>,
          backgroundColor: '#17a2b8'
        }]
      },
      options: { plugins: { title: { display: true, text: 'Payments Trend (Daily)' } } }
    });

    // Revenue Trend Chart
    new Chart(document.getElementById('revenueTrendChart'), {
      type: 'line',
      data: {
        labels: <%- JSON.stringify(revenueTrend.map(r => r.date)) %>,
        datasets: [{
          label: 'Revenue',
          data: <%- JSON.stringify(revenueTrend.map(r => r.total)) %>,
          borderColor: '#28a745',
          fill: false
        }]
      },
      options: { plugins: { title: { display: true, text: 'Revenue Trend (Daily)' } } }
    });

    // Profile Revenue Breakdown
    new Chart(document.getElementById('profileRevenueChart'), {
      type: 'pie',
      data: {
        labels: <%- JSON.stringify(profileRevenue.map(pr => pr.profile)) %>,
        datasets: [{
          data: <%- JSON.stringify(profileRevenue.map(pr => pr.total)) %>,
          backgroundColor: ['#007bff','#ffc107','#28a745','#dc3545','#6f42c1']
        }]
      },
      options: { plugins: { title: { display: true, text: 'Revenue by Profile' } } }
    });
  </script>
</body>
</html>

